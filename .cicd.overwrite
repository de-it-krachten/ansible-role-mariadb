---

generic:
  role_description: |
    Installs & configures MariaDB 10.x using packages from mariadb.com

# Supported platforms
platforms:
  rhel7:
    ci: false
    supported: false
  centos7:
    ci: false
    supported: false
  debian12:
    ci: false
    supported: false
  fedora40:
    ci: false
    supported: false
  fedora41:
    ci: false
    supported: false
  alpine3:
    ci: false
    supported: false

molecule:
  converge:
    vars:
      mariadb_release: '10.11'
      mariadb_user: root
      mariadb_pwd: root1234
      mariadb_db_name: db01
      mariadb_db_user: user01
      mariadb_socket_authentication: true
